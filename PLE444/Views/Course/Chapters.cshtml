@model List<PLE444.Models.Chapter>
@{
    ViewBag.Title = "Chapters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-bluegray" data-widget='{"draggable": "false"}'>
    <div class="panel-heading">
        <span class="pull-right">MATH 101.02 Calculus</span>
        <h2>
            <ul class="nav nav-tabs">
                <li class="active"><a href="@Url.Action("Chapters","Course")">Bölümler</a></li>
                <li><a href="@Url.Action("Assignments","Course",new { id = Model.First().CourseId })"> Ödevler</a></li>
                <li><a href="@Url.Action("Materials","Course")">Materyaller</a></li>
                <li><a href="@Url.Action("Grades","Course")">Notlar</a></li>
                <li><a href="#Communities">Tartışmalar</a></li>
            </ul>
        </h2>
    </div>
</div>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="panel panel-default" data-widget='{"draggable";: "false"}' data-widget-static="" style="visibility: visible; opacity: 1; display: block; transform: translateY(0px);">
            <div class="panel-heading">
                <h2>@Html.DisplayFor(modelItem => item.Title)</h2>
                <div class="panel-ctrls" data-actions-container="" data-action-collapse='{"target": ".panel-body, .panel-footer"}'></div>
            </div>
            <div class="panel-body" style="height: 148px">
                @Html.DisplayFor(modelItem => item.Description)
            </div>
            <div> @Html.DisplayFor(modelItem => item.DateAdded)</div>
            <div class="panel-footer">
                <a href="@Url.Action("AssignmentCreate", "Course")" class="btn btn-primary" id="dyna-del"> Materyal Yükle</a>
                <a href="#" class="btn btn-primary" id="dyna-del"> Ödev Yükle</a>
                <a href="#" class="text-gray pull-right">Detay <i class="ti ti-angle-right"></i></a>
            </div>
        </div>
    }
}





