
@{
    ViewBag.Title = "Grade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Not</h4>
            <hr />

            <input type="hidden" name="userId" id="userId" value="@ViewBag.UserId"/>
            <input type="hidden" name="gradeTypeId" id="gradeTypeId" value="@ViewBag.GradeTypeId" />
            
            
            
    
            <div class="form-group">
                <label class = "control-label col-md-2" >Not</label> 
                <div class="col-md-10">
                    <input type="number" name="grade" id="grade" value="@ViewBag.Grade" />
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Değiştir" class="btn btn-warning-alt" />
                </div>
            </div>
        </div>
    }    
</div>