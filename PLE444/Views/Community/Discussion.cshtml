@model PLE444.Models.Community
@{
    ViewBag.Title = "Discussion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-bluegray" data-widget='{"draggable": "false"}'>
    <div class="panel-heading">
        <span class="pull-right">Databaseciler</span>
        <h2>
            <ul class="nav nav-tabs">
                <li ><a href="@Url.Action("Index")" >Grup</a></li>
                <li><a href="@Url.Action("Events")" >Etkinlik</a></li>
                <li class="active"><a href="@Url.Action("Discussion")" >Tartışma</a></li>
                <li><a href="@Url.Action("Archive")" >Arşiv</a></li>

            </ul>
        </h2>
    </div>
</div>

<div class="row">
    <div class="col-md-9">
         <div class="panel-group panel-default" id="accordionA">
                    
                    @foreach (var discussion in Model.Discussion)
                    {
                        <div class="panel panel-default">
                            <a data-toggle="collapse" data-parent="#accordionA" href="#collapseTwo"><div class="panel-heading"><h2>@discussion.Topic</h2></div></a>
                            <div id="collapseTwo" class="collapse">
                                <div class="panel-body">
                                    @foreach (var message in discussion.Messages)
                                    {
                                        <div class="message">
                                            <img class="img-circle" style="width:40px" src="~/Content/img/pp.jpg" />
                                            <strong style="margin-left:10px;">@message.SenderId</strong>
                                            <div class="pull-right">
                                                <small>@message.DateSent</small>
                                            </div>
                                            <br>
                                            <p style="margin-left:50px;">@message.Content</p>
                                            <hr>
                                        </div>
                                    }
                                    <div class="message">
                                        <img class="img-circle" style="width:40px" src="~/Content/img/pp.jpg" />
                                        <strong style="margin-left:10px;">Levent Kıran</strong>
                                        <div class="pull-right">
                                        </div>
                                        <br>
                                        <form action="" method="post" class="form-horizontal row-border">
                                            <div class="form-group  ml-xxl">
                                                <div class="col-sm-12">
                                                    <textarea class="form-control autosize" style="overflow: hidden; word-wrap: break-word; resize: horizontal;"></textarea>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success pull-right">Gönder</button>
                                        </form>
                                    </div> 
                                </div>
                            </div>
                        </div>
                    }
            
                </div>       
    </div>
</div>

<script src="http://code.jquery.com/jquery-3.1.0.min.js"></script>

<script>
    $(document).ready(function () {
        $('textarea.autosize').autosize({ append: "\n" })
    });
</script>
