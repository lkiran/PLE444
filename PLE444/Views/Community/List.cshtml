@model IEnumerable<PLE444.Models.Community>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-default" data-widget='{"draggable": "false", "collapsable" :"false"}'>
    <div class="panel-heading">
        <h2>Gruplar</h2>
        <div class="pull-right">
            <a href="@Url.Action("Create","Community")">
                <i class="ti ti-plus"></i> Yeni Grup Oluştur
            </a>
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-hover m-n">

            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Açılma Tarihi</th>                        
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td> <a href="@Url.Action("Index",new { id = item.Id })"> @item.Name</a></td>
                        <td>@Html.DisplayFor(modelItem => item.DateCreated)</td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>



