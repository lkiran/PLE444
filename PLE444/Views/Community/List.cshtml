@model IEnumerable<PLE444.Models.Community>
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-default" data-widget='{"draggable": "false", "collapsable" :"false"}'>
    <div class="panel-heading">
        <h2>Gruplar</h2>
        <div class="pull-right">
            <i class="ti ti-plus"></i>
            @Html.ActionLink("Yeni Grup Oluştur", "Create")
        </div>
    </div>
    <div class="panel-body">
        <table class="table table-hover m-n">

            <thead>
                <tr>
                    <th>İsim</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th></th>       
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td> <a href="@Url.Action("Index",new { id = item.ID })"> @item.Name</a></td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            @if (item.isOpen) { @Html.Raw("Açık") }
                            else {@Html.Raw("Kapalı")  }
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Düzenle", "CourseEdit", new { id = item.ID }, new { @class = "btn btn-default-alt btn-sm" })
                                @Html.ActionLink("Sil", "CourseDelete", new { id = item.ID }, new { @class = "btn btn-danger-alt btn-sm" })
                            </div>
                        </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
</div>



