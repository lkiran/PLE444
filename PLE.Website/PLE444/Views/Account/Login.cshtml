@using PLE444.Models
@model LoginViewModel
@{
	ViewBag.Title = "Giriş";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row animated-content">
	<div class="container" id="login-form">
		<div class="row">
			<div class="col-md-4 col-md-offset-4">
				@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
				{
					<div class="panel panel-default">
						<div class="panel-heading">
							<h2>Giriş</h2>
						</div>
						<div class="panel-body">

						@*	@Html.AntiForgeryToken()*@

							@Html.ValidationSummary(true, "", new { @class = "text-danger" })
							<div class="form-group mb-md">

								<div class="col-xs-12">
									<div class="input-group">
										<span class="input-group-addon">
											<i class="ti ti-user"></i>
										</span>
										@Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
										@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", placeholder = "E-Posta" })
									</div>
								</div>
							</div>

							<div class="form-group mb-md">
								<div class="col-xs-12">
									<div class="input-group">
										<span class="input-group-addon">
											<i class="ti ti-key"></i>
										</span>
										@Html.PasswordFor(m => m.Password, new { @class = "form-control" })
										@Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", placeholder = "Şifre" })
									</div>
								</div>
							</div>

							<div class="form-group mb-n">
								<div class="col-xs-12">
									<a href="@Url.Action("ForgotPassword","Account")" class="pull-left">Şifremi Unuttum</a>
									<div class="checkbox-inline icheck pull-right p-n">
										<label for="">
											@Html.CheckBoxFor(m => m.RememberMe)
											Beni Hatırla!
										</label>
									</div>
								</div>
							</div>
						</div>
						<div class="panel-footer">
							<div class="clearfix">
								<a href="@Url.Action("Register","Account")" class="btn btn-default pull-left">Kayıt Ol</a>
								<input type="submit" class="btn btn-primary pull-right" value="Giriş" />
							</div>
						</div>
					</div>
				}

				@*<div class="text-center">
						<a href="#" class="btn btn-label btn-social btn-facebook mb-md"><i class="ti ti-facebook"></i>Connect with Facebook</a>
						<a href="#" class="btn btn-label btn-social btn-twitter mb-md"><i class="ti ti-twitter"></i>Connect with Twitter</a>
					</div>*@
			</div>
		</div>
	</div>
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}